---
// Whatsapp.astro - Componente de botón flotante de WhatsApp
// Puedes personalizar el número de teléfono y el mensaje aquí
const phoneNumber = "5491165233919"; // Reemplaza con tu número (formato internacional sin el +)
const message = "Hola Rock & Code, me gustaría obtener más información sobre sus servicios.";
---

<!-- Botón flotante de WhatsApp -->
<a href={`https://wa.me/${phoneNumber}?text=${encodeURIComponent(message)}`}
   target="_blank" 
   rel="noopener noreferrer" 
   class="fixed bottom-6 right-6 z-50 flex items-center justify-center w-16 h-16 rounded-full shadow-lg transition-all duration-300 hover:scale-110 hover:shadow-xl whatsapp-btn overflow-hidden"
   aria-label="Chatear por WhatsApp">
  <!-- Efecto de pulso con limitación de espacio -->
  <span class="absolute inset-0 rounded-full animate-ping opacity-60"></span>
  
  <!-- Ícono de WhatsApp -->
  <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" fill="currentColor" viewBox="0 0 24 24" class="relative z-10">
    <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
  </svg>
  
  <!-- Tooltip adaptativo que aparece al hover -->
  <span class="tooltip-wrapper">
    <span class="whatsapp-tooltip">
      ¡Chatea con nosotros!
      <span class="tooltip-arrow"></span>
    </span>
  </span>
</a>

<style>
  /* Colores de WhatsApp */
  .whatsapp-btn {
    background-color: #25D366;
    color: white;
  }
  
  .whatsapp-btn .animate-ping {
    background-color: #25D366;
  }
  
  /* Tooltip Container - regula la posición */
  .tooltip-wrapper {
    position: absolute;
    width: 0;
    height: 0;
    left: 0;
    top: 0;
    overflow: visible;
    pointer-events: none;
  }
  
  /* Tooltip adaptativo */
  .whatsapp-tooltip {
    position: fixed;
    left: auto;
    right: calc(100% + 16px); /* A la izquierda del botón con espacio */
    bottom: 24px;
    transform: translateX(10px);
    opacity: 0;
    background-color: #075E54;
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 0.5rem;
    white-space: nowrap;
    font-size: 0.875rem;
    font-weight: 500;
    transition: all 0.3s ease;
    pointer-events: none;
    z-index: 49; /* Justo por debajo del botón */
  }
  
  /* Flecha del tooltip */
  .tooltip-arrow {
    position: absolute;
    right: -4px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    width: 8px;
    height: 8px;
    background-color: #075E54;
  }
  
  /* Mostrar tooltip en hover */
  .whatsapp-btn:hover .whatsapp-tooltip {
    opacity: 1;
    transform: translateX(0);
  }
  
  /* Animación de ping más contenida */
  @keyframes ping {
    75%, 100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }
  
  .animate-ping {
    animation: ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
  
  /* Media query para dispositivos móviles */
  @media (max-width: 640px) {
    .whatsapp-tooltip {
      right: auto;
      left: 50%;
      bottom: calc(100% + 12px);
      transform: translateX(-50%) translateY(10px);
    }
    
    .whatsapp-btn:hover .whatsapp-tooltip {
      transform: translateX(-50%) translateY(0);
    }
    
    .tooltip-arrow {
      right: auto;
      top: auto;
      bottom: -4px;
      left: 50%;
      transform: translateX(-50%) rotate(45deg);
    }
  }
</style>