---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Whatsapp from '../components/Whatsapp.astro';
import '../styles/global.css'

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<!-- Metadatos básicos SEO -->
    <title>{title} | Desarrollo de Software y Aplicaciones</title>
	<meta name="description" content="Transformamos ideas en soluciones digitales. Desarrollo web, aplicaciones móviles, bases de datos y servicios IA para llevar tu empresa al siguiente nivel." />

    <!-- Etiquetas Open Graph para compartir en redes sociales -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://rockandcode.tech/" />
    <meta property="og:title" content="{title} | Rock & Code" />
    <meta property="og:description" content="Desarrollo de software a medida para transformar ideas en soluciones digitales." />

	<!-- Twitter Card data -->
	<meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{title} | Rock & Code" />
    <meta name="twitter:description" content="Desarrollo de software a medida para transformar ideas en soluciones digitales." />
	
	<!-- Canonical URL para evitar contenido duplicado -->
    <link rel="canonical" href="https://rockandcode.tech/" />

	<!-- Metadatos de autor y tema -->
    <meta name="author" content="Rock & Code" />
    <meta name="theme-color" content="#ff1493" />

	<!-- Metadatos para rastreadores (robots) -->
    <meta name="robots" content="index, follow" />

	<!-- Prefetch y preconnect para acelerar la carga -->
    <link rel="dns-prefetch" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.googleapis.com" crossorigin />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
	
	<link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&family=Rock+Salt&display=swap" rel="stylesheet" media="print" onload="this.media='all'">
    
    <!-- Precargar fuente Rock Salt -->
    <link rel="preload" as="font" href="https://fonts.gstatic.com/s/rocksalt/v18/MwQ0bhv11fWD6QsAVOZrt0M6.woff2" crossorigin />
    
    <!-- AOS CSS cargado con estrategia de rendimiento -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet" media="print" onload="this.media='all'">

</head>
  <body class="bg-gray-100 font-roboto text-gray-900">
	<Header />
    <main class="site-content">
      <slot />
    </main>
	<Footer/>
	<Whatsapp/>
	
	<!-- Script para inicializar AOS (Animate On Scroll) -->
	<script is:inline src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
	<script is:inline>
		document.addEventListener('DOMContentLoaded', () => {
			// Inicializar AOS
			AOS.init({
				duration: 800,
				once: false,
				mirror: true,
			});
			
			// Forzar la carga de la fuente Rock Salt
			document.fonts.ready.then(() => {
				if (document.fonts.check('12px "Rock Salt"')) {
					console.log('Fuente Rock Salt cargada correctamente');
				} else {
					console.warn('La fuente Rock Salt no se cargó correctamente');
					// Fallback: intentar aplicar la fuente a elementos específicos
					const rockSaltElements = document.querySelectorAll('.font-rock-salt, [style*="Rock Salt"]');
					rockSaltElements.forEach(el => {
						el.style.fontFamily = '"Rock Salt", cursive';
					});
				}
			});
		});
	</script>
  </body>
</html>

<style is:global>
	/* Definición de variables CSS para la paleta de colores */
	:root {
	  --color-primary: #ff1493; /* Rosa fuerte */
	  --color-secondary: #121212; /* Negro */
	  --color-light: #f5f5f5; /* Gris clarito */
	  --header-height: 72px; /* Altura predeterminada del header */
	}
  
	/* Aplicar Roboto a todo el sitio */
	html, body {
	  font-family: 'Roboto', sans-serif;
	  margin: 0;
	  padding: 0;
	  scroll-behavior: smooth;
	  overflow-x: hidden; /* Evitar scroll horizontal */
	  width: 100%;
	}
	
	body {
	  min-height: 100vh;
	  display: flex;
	  flex-direction: column;
	  position: relative;
	}
	
	.site-content {
	  flex: 1;
	}
  
	/* Definir clase de utilidad para la fuente Rock Salt */
	.font-rock-salt {
	  font-family: 'Rock Salt', cursive;
	}
  
	/* Clase de utilidad para transiciones suaves */
	.transition-all {
	  transition: all 0.3s ease-in-out;
	}
	
	/* Clases de utilidad para colores personalizados */
	.bg-primary { background-color: #ff1493 !important; }
	.bg-primary-10 { background-color: rgba(255, 20, 147, 0.1) !important; }
	.bg-primary-20 { background-color: rgba(255, 20, 147, 0.2) !important; }
	.bg-secondary { background-color: #121212 !important; }
	.bg-light { background-color: #f5f5f5 !important; }
	
	.text-primary { color: #ff1493 !important; }
	.text-secondary { color: #121212 !important; }
	.text-light { color: #f5f5f5 !important; }
	
	.border-primary { border-color: #ff1493 !important; }
	.border-secondary { border-color: #121212 !important; }
	.border-light { border-color: #f5f5f5 !important; }
	
	.hover\:bg-primary:hover { background-color: #ff1493 !important; }
	.hover\:bg-primary-80:hover { background-color: rgba(255, 20, 147, 0.8) !important; }
	.hover\:bg-primary-10:hover { background-color: rgba(255, 20, 147, 0.1) !important; }
	.hover\:text-primary:hover { color: #ff1493 !important; }
	.hover\:text-primary-80:hover { color: rgba(255, 20, 147, 0.8) !important; }
	.hover\:border-primary:hover { border-color: #ff1493 !important; }
	
	/* Ajuste para el menú abierto */
	body.menu-open {
	  overflow: hidden !important;
	  position: fixed;
	  width: 100%;
	  height: 100%;
	}
	
	/* Arreglo para espacio debajo del header */
	.pt-header {
      padding-top: var(--header-height);
    }
    
    /* Ajustes para dispositivos móviles */
    @media (max-width: 768px) {
      :root {
        --header-height: 64px; /* Altura ajustada para móviles */
      }
    }
</style>