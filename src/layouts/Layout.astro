---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import Whatsapp from '../components/Whatsapp.astro';
import '../styles/global.css'

export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logo.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <!-- Google Fonts - Roboto -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap" rel="stylesheet">
    <!-- AOS CSS para animaciones de scroll -->
    <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">
  </head>
  <body class="bg-gray-100 font-roboto text-gray-900">
	<Header />
    	<slot />
		<Footer/>
		<Whatsapp/>
		<!-- Script para inicializar AOS (Animate On Scroll) -->
		<script is:inline src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
		<script is:inline>
			document.addEventListener('DOMContentLoaded', () => {
				AOS.init({
					duration: 800,
					once: false,
					mirror: true,
				});
			});
			</script>
  </body>
</html>

<style is:global>
	/* Definici√≥n de variables CSS para la paleta de colores */
	:root {
	  --color-primary: #ff1493; /* Rosa fuerte */
	  --color-secondary: #121212; /* Negro */
	  --color-light: #f5f5f5; /* Gris clarito */
	}
  
	/* Aplicar Roboto a todo el sitio */
	body {
	  font-family: 'Roboto', sans-serif;
	  margin: 0;
	  padding: 0;
	  scroll-behavior: smooth;
	}
  
	/* Clase de utilidad para transiciones suaves */
	.transition-all {
	  transition: all 0.3s ease-in-out;
	}
	
	/* Clases de utilidad para colores personalizados */
	.bg-primary { background-color: #ff1493 !important; }
	.bg-primary-10 { background-color: rgba(255, 20, 147, 0.1) !important; }
	.bg-primary-20 { background-color: rgba(255, 20, 147, 0.2) !important; }
	.bg-secondary { background-color: #121212 !important; }
	.bg-light { background-color: #f5f5f5 !important; }
	
	.text-primary { color: #ff1493 !important; }
	.text-secondary { color: #121212 !important; }
	.text-light { color: #f5f5f5 !important; }
	
	.border-primary { border-color: #ff1493 !important; }
	.border-secondary { border-color: #121212 !important; }
	.border-light { border-color: #f5f5f5 !important; }
	
	.hover\:bg-primary:hover { background-color: #ff1493 !important; }
	.hover\:bg-primary-80:hover { background-color: rgba(255, 20, 147, 0.8) !important; }
	.hover\:bg-primary-10:hover { background-color: rgba(255, 20, 147, 0.1) !important; }
	.hover\:text-primary:hover { color: #ff1493 !important; }
	.hover\:text-primary-80:hover { color: rgba(255, 20, 147, 0.8) !important; }
	.hover\:border-primary:hover { border-color: #ff1493 !important; }
  </style>